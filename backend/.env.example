# ========================================
# Database Configuration
# ========================================
DATABASE_URL=postgresql+psycopg2://postgres:YourPassword@localhost:5432/moodle_zoho_v2

# ========================================
# App Configuration
# ========================================
APP_NAME=Moodle Zoho Integration
ENV=development
LOG_LEVEL=INFO

# Secret key for encryption (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your-fernet-key-here

# ========================================
# Moodle Configuration
# ========================================
MOODLE_BASE_URL=http://localhost:8000
MOODLE_TOKEN=your-moodle-webservice-token-here

# ========================================
# Zoho CRM Configuration
# ========================================

# OAuth Credentials (from https://api-console.zoho.com/)
ZOHO_CLIENT_ID=1000.XXXXXXXXXXXXXXXXXXXXX
ZOHO_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ZOHO_REFRESH_TOKEN=1000.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Organization (optional, for multi-org setups)
ZOHO_ORGANIZATION_ID=

# Data Center Region (com, eu, in, au, etc.)
ZOHO_REGION=com

# API Timeout in seconds
ZOHO_TIMEOUT=30.0

# ========================================
# Zoho Webhook Security
# ========================================

# HMAC secret for webhook verification
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
ZOHO_WEBHOOK_HMAC_SECRET=your-secret-key-here-change-this
